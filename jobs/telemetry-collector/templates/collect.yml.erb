---
url: https://<%= p('opsmanager.auth.hostname') %>
<% if_p('opsmanager.auth.username') do |p| %>username: <%= p %> <% end %>
<% if_p('opsmanager.auth.password') do |p| %>password: <%= p %> <% end %>
<% if_p('opsmanager.auth.uaa_client_name') do |p| %>client-id: <%= p %> <% end %>
<% if_p('opsmanager.auth.uaa_client_secret') do |p| %>client-secret: <%= p %> <% end %>
env-type: <%= p('telemetry.env_type') %>
<% if_p('telemetry.foundation_nickname') do |p| %>foundation-nickname: <%= p %> <% end %>
<% if_p('telemetry.data_collection_multi_select_options') do |p| %>data-collection-multi-select-options: <%= p %> <% end %>
<% if_p('telemetry.operational_data_only') do |p| %>operational-data-only: <%= p %> <% end %>
<% if_p('telemetry.split_tar_by_data_type') do |p| %>split-tar-by-data-type: <%= p %> <% end %>
<% if_p('telemetry.tas_installed_selector') do |p| %>tas-installed-selector: <%= p %> <% end %>
output-dir: /var/vcap/data/telemetry-collector/
<% if_p('opsmanager.insecure_skip_tls_verify') do |p| %>insecure-skip-tls-verify: <%= p %> <% end %>
<% if_p('opsmanager.timeout') do |p| %>ops-manager-timeout: <%= p %> <% end %>
<% if_p('opsmanager.request_timeout') do |p| %>ops-manager-request-timeout: <%= p %> <% end %>

<% if_p('cf.api_url') do |p| %>cf-api-url: <%= p %> <% end %>
<% if_p('usage_service.url') do |p| %>usage-service-url: <%= p %> <% end %>
<% if_p('usage_service.client_id') do |p| %>usage-service-client-id: <%= p %> <% end %>
<% if_p('usage_service.client_secret') do |p| %>usage-service-client-secret: <%= p %> <% end %>
<% if_p('usage_service.insecure_skip_tls_verify') do |p| %>usage-service-insecure-skip-tls-verify: <%= p %> <% end %>
<% if_p('usage_service.timeout') do |p| %>usage-service-timeout: <%= p %> <% end %>

<% if_p('telemetry.tile_name') do |tile_name| %>
  <% if tile_name != '' %>
collection-source: tile
tile-name: <%= tile_name %>
  <% end %>
<% end %>
<% if_p('telemetry.tile_version') do |tile_version| %>
tile-version: <%= tile_version %>
<% end %>
<% if_p('telemetry.release_version') do |release_version| %>
bosh-release-version: <%= release_version %>
<% end %>
<% if_p('audit_mode') do |audit_mode| %>
tile-audit-mode: <%= audit_mode %>
<% end %>
